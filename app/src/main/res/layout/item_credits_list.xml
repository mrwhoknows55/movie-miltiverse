<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:layout_constraintDimensionRatio="2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileImg"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxEms="11"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivProfileImg"
        app:layout_constraintStart_toStartOf="@+id/ivProfileImg"
        app:layout_constraintTop_toBottomOf="@+id/ivProfileImg"
        tools:text="Benedict Cumberbatch" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="11"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvHead"
        app:layout_constraintStart_toStartOf="@+id/tvHead"
        app:layout_constraintTop_toBottomOf="@+id/tvHead"
        tools:text="Actor" />

</androidx.constraintlayout.widget.ConstraintLayout>